<%= semantic_form_for(@user_session) do |f| %>
	<%= f.inputs do %>
		<%= f.input :email %>
		<%= f.input :password %>
		<%= hidden_field_tag :whence, @whence %>
	<% end %>
	<%= f.actions do %>
		<%= f.submit "Login", :class => "super awesome large button" %>
		<%= link_to "Forgot password?", password_path %>
	<% end %>
<% end %>