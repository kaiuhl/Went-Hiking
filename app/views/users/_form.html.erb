<%= semantic_form_for(@user, :html => { :multipart => true }) do |f| %>
	<% f.inputs do %>
		<%= f.input :name, :hint => "This can be real or fake, but real is preferable. Let's be friends, not strangers." %>
		<%= f.input :email %>
		<%= f.input :locale, :hint => "This will help us show you relevant nearby hikes." %>
		<%= f.input :avatar, :label => "A photo of you", :hint => 
			(@user.avatar_file_name.blank? ? "Upload a photo to represent yourself! This will be cropped into a square." :
			image_tag(@user.avatar.url(:thumbnail))) %>
		<%= f.input :password %>
		<%= f.input :password_confirmation %>
		<%= f.input :notify_on_comment, :label => "Email notifications for comments on your trips" unless @user.id.blank? %>
	<% end %>
	<% f.buttons do %>
		<%= f.submit "Save", :class => "super awesome large button" %>
	<% end %>
<% end %>